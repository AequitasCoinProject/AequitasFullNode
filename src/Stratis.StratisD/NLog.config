<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
  <targets>
    <target xsi:type="File" name="debugFile" fileName="trace.txt" layout="[${longdate:universalTime=true} ${threadid}${mdlc:item=id}] ${level:uppercase=true}: ${callsite} ${message}" encoding="utf-8" />
    <target xsi:type="null" name="null" formatMessage="false" />
  </targets>

  <rules>
    <logger name="Stratis.Bitcoin.Features.Wallet.*" minlevel="Trace" writeTo="debugFile" />
    <logger name="Stratis.Bitcoin.Features.MemoryPool.*" minlevel="Trace" writeTo="debugFile" />
    <logger name="Stratis.Bitcoin.P2P.*" minlevel="Trace" writeTo="debugFile" />
  </rules>
</nlog>